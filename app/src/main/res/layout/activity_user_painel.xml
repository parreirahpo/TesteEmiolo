<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:textColor="#000000"
        android:layout_height="40dp"
        android:id="@+id/textwelcome" android:textSize="20dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Sair"
        android:id="@+id/logout"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/btnListUsers"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/user"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/textwelcome"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textwelcome"
        android:text="Alterar Senha"
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="UsuÃ¡rios Cadastrados"
        android:id="@+id/btnListUsers"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/btnChangePass"
        android:layout_alignParentLeft="true"/>

    </RelativeLayout>